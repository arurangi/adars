server 
{
    listen 8000;
    host 127.0.0.1;
    server_name adarscom;

    root ./public;
    index index.html;

    client_max_body_size 2g;

    error_page 404 40445.html;
    error_page 405 caca.html;

    location / {
        allow_methods [GET POST];
        autoindex off;
        root ./public;
        index index4.html;
    }

    location /about {
        allow_methods GET;
        autoindex off;
        root ./public;
        index about.html;
        # return 302 maintenance.html;
    }

    location /send-files {
        allow_methods [GET POST];
        autoindex on;
        root ./public;
        index upload.html;
        # return 302 maintenance.html;
    }

    location /storage {
        allow_methods [GET POST DELETE];
        autoindex on;
        root ./public;
        index uploaded.html;
    }

    location /form {
        allow_methods [GET POST];
        autoindex off;
        root ./public;
        index for.html;
        error_page 404 form_404.html;
    }
}

server
{
    listen 8001;
    host 127.0.0.1;
    server_name adarsthesecond;

    root ./public;
    index index.html;

    client_max_body_size 2g;

    location / {
        allow_methods [GET];
        autoindex on;
        index index.html;

    }

    location /assets {
        allow_methods GET;
        autoindex off;
    }

    location /upload {
        allow_methods [GET POST DELETE];
        autoindex on;
        index upload.html;
    }
}

