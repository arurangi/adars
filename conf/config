server 
{
    listen 8000;
    host 127.0.0.1;
    server_name www.adars.com;

    root ./public;
    index index.html;

    client_max_body_size 2g;

    location / {
        allow_methods [GET];
        autoindex on;
    }

    location /assets {
        allow_methods GET;
        autoindex off;
    }

    location /upload {
        allow_methods [GET POST DELETE];
        autoindex on;
    }
}

